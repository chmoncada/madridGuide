<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_shop_detail"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.charlesmoncada.madridguide.activities.ShopDetailActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_detail_image_height">

            <ImageView
                android:id="@+id/activity_shop_detail_shop_image"
                tools:src = "@android:drawable/btn_plus"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/activity_shop_detail_shop_logo_image"
                tools:src = "@android:drawable/btn_plus"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/activity_detail_logo_height"
                android:layout_height="@dimen/activity_detail_logo_height"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/activity_shop_detail_shop_name_text"
            android:textSize="20sp"
            tools:text="TEXT TEXT TEXT"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/activity_shop_detail_shop_description"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent nibh mauris, maximus sed leo vitae, aliquet facilisis elit. Nam id convallis ligula, nec tincidunt diam. Sed congue eros et faucibus fringilla. Cras egestas varius nunc, nec laoreet orci mollis nec. Nullam elit orci, rhoncus vel lorem sit amet, facilisis pretium erat. Aliquam non ipsum dui. Maecenas ut odio tortor. Sed eu mattis nisi."
            android:layout_margin="@dimen/activity_detail_textview_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/activity_shop_detail_shop_address"
            android:layout_width="@dimen/activity_detail_address_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_detail_address_bottom_margin"
            tools:text="Calle de Serrano, 18"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/activity_shop_detail_shop_map"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_detail_map_height"
            android:scaleType="fitXY"/>

    </LinearLayout>

</ScrollView>