<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_info_window"
    android:background="@color/colorBackgroundTextLabel"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/map_info_window_logo"
        tools:src="@android:drawable/btn_default"
        android:padding="2dp"
        android:layout_width="@dimen/activity_map_info_image_size"
        android:layout_height="@dimen/activity_map_info_image_size"/>

    <TextView
        android:id="@+id/map_info_window_name"
        tools:text="PRUEBA"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/activity_detail_textview_margin"
        android:layout_marginLeft="@dimen/activity_detail_textview_margin"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>